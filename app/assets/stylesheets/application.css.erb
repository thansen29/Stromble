 .global-nav {
   background: white;
   border-bottom: 1px solid #e6e6eb;
   box-shadow: 0 1px 2px rgba(0,0,0,0.025);
   height: 55px;
   color: #606065;
   font-size: 16px;
   font-weight: 540;
   list-style: none;
   box-sizing: border-box;
   display: flex;
   align-items: center;
 }


.nav-dropdown {
  display: inline-block;
  padding: 17px 0;
  padding-left: 10px;
  width: 10%;
}


.nav-dropdown-content {
  display: none;
  position: absolute;
  background: white;
  border-right: 1px solid #ccccd1;
  border-left: 1px solid #ccccd1;
  border-bottom: 1px solid #ccccd1;
  border-top: 1px solid #ccccd1;
  z-index: 1;
  margin-top: 38px;
  margin-left: -11px;
  width: 10%
}

.nav-dropdown-content a {
  padding: 10px;
  display: block;
}

.nav-dropdown-content a:hover {
  background: rgb(224, 224, 230);
}

.nav-dropdown:hover {
  cursor: pointer;
  border-right: 1px solid #ccccd1;
  border-left: 1px solid #ccccd1;
}

.nav-dropdown:hover .nav-dropdown-content{
  display: block;
  color: #606065;
}

.nav-dropdown:hover .nav-title{
  color: rgb(249, 77, 31);
  cursor: pointer;
}

